<!DOCTYPE html>
<% if (getLocale()=="fr" ) { %>
    <html lang="fr">
<% } else { %>
    <html lang="en">
<% } %>
	<head>
		<%- include('../../partial/head') %>
		<meta name="robots" content="noindex">
	</head>

	<body>
		<navbar>
			<%- include('../../partial/header') %>

            <script type="text/javascript">
				window.onload = function() {
					let code = <%- code %>;
                    let hash = '<%- hash %>';

                    if(code == 2) {
                        setTimeout(function() {
						       document.getElementById('info-toast').style.opacity = 0;
						}, 4000);

                        document.getElementById('info-toast').style = 'height: 110px;';
                        document.getElementById('toast-text').innerHTML = 'Code de vérification incorrect.';
                        document.getElementById('info-toast').style.opacity = 1;
                    }
                    else if(code == 1) {
                        document.getElementById('hash_result').style = 'display: unset;';
                        document.getElementById('hash_result').innerHTML = `Votre hash &nbsp;"<b>${hash}</b>"`;
                    }
				};
			</script>
        </navbar>

		<header id="header">
            <div class="big-header">
                <div class="trangles-left">
                    <div class="triangle1 triangle"><div></div></div>
                    <div class="triangle2 triangle"><div></div></div>
                    <div class="triangle3 triangle"><div></div></div>
                    <div class="triangle4 triangle"><div></div></div>
                </div>

                <div class="triangles-right">
                    <div class="triangle5 triangle"><div></div></div>
                    <div class="triangle6 triangle"><div></div></div>
                    <div class="triangle7 triangle"><div></div></div>
                    <div class="triangle8 triangle"><div></div></div>
                </div>

                <div class="b-g-main-logo" onclick="document.location.href='/'">
                    <img src="/imgs/main_logo.png" />
                </div>

                <div class="b-g-main-text">
                    <div class="bgm-t-1" style="text-transform: uppercase;">Hash de mot de passe</div>
                    <div class="bgm-t-2"></div>
                    <div class="bgm-t-3">
                        <div class="bgm-t-3-1">
                            Mecanica
                        </div>
                        <div class="bgm-t-3-2">
                            Science
                        </div>
                        <div class="bgm-t-3-2">
                            <button type="button" class="btn btn-outline-light" href="/" onclick="document.location.href='/'">
                                Retourner à l'accueil
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </header>

        <article>
			<div class="section section-2" style="margin-top: -5px; height: 324px;/*background: linear-gradient(43deg, #aa4a16, #F0712C 60%, #F0712C);*/">
                <div class="toaster">
    				<div id="info-toast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
    					<div class="toast-header">
    						<svg class="bd-placeholder-img rounded mr-2" width="20" height="20" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img">
    							<rect width="100%" height="100%" fill="#007aff"></rect>
    						</svg>
    						<strong class="mr-auto">Information</strong>
    						<button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close" onclick="document.getElementById('info-toast').style.opacity = 0">
    							<span aria-hidden="true">&times;</span>
    						</button>
    					</div>
    					<div class="toast-body" id="toast-text">
    						Chargement...
    					</div>
    				</div>
    			</div>

                <div class="m-title" style="margin-top: 45px;" id="form_hash">
                    <div class="container m-c-header">
						<div class="m-c-row">
						</div>

						<div class="m-c-row">
                            <form id="connection-form" action="/admin/hash_password" method="post">
                                <div class="m-c-col">
    								<span style="display: none;" class="input-group-text" id="hash_result">Votre hash : &nbsp;"<b>HASH</b>"</span>
    							</div>

    							<div class="m-c-col">
    								<div class="input-group mb-3">
    									<div class="input-group-prepend">
    										<span class="input-group-text" id="date-publication">Votre mot de passe à hasher :</span>
    									</div>
    									<input style="color: #606060 !important;" type="password" class="form-control" id="password" name="password">
    								</div>
    							</div>

                                <div class="m-c-col">
    								<div class="input-group mb-3">
    									<div class="input-group-prepend">
    										<span class="input-group-text" id="date-publication">Code de vérification :</span>
    									</div>
    									<input style="color: #606060 !important;" type="password" class="form-control" id="verif_code" name="verif_code">
    								</div>
    							</div>

                                <div class="m-c-col">
                                    <div class="modal-footer">
            							<button type="button" class="btn btn-outline-success" data-dismiss="modal" onclick="document.getElementById('connection-form').submit()">Valider</button>
            							<button type="button" class="btn btn-outline-dark" onclick="window.location.href = '/'">Retourner à l'accueil</button>
            						</div>
                                </div>
                            <form>
						</div>

						<div class="m-c-row">
						</div>
					</div>
                </div>
			</div>
		</article>

		<%- include('../../partial/footer') %>
		<style>
			footer { margin-top: -109px !important; }
		</style>
	</body>
</html>
